<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.googry.whoru">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".userlist.AddUserActivity" />
        <activity android:name=".userlist.DetailUserActivity" />
        <activity android:name=".todolist.AddTodoActivity" />
        <activity android:name=".TmpActivity" />

        <receiver android:name=".IncomingCallBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <service
            android:name=".ViewService"
            android:permission="android.permission.SYSTEM_ALERT_WINDOW"></service>

        <activity android:name=".todolist.DetailTodoActivity"></activity>
    </application>

</manifest>